{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-14 build active file",
            "command": "/opt/homebrew/bin/gcc-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "build",
            "command": "clang",
            "args": [
                "-fsanitize=address",
                "-g",
                "-o",
                "autocomplete",
                "autocomplete.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/projects/project1"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent"
            }
        }
    ],
    "version": "2.0.0"
}